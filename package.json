{
  "name": "api-starter",
  "version": "1.0.0",
  "description": "kudo node.js template",
  "main": "service/api/client.js",
  "engines": {
    "node": ">=7.7.4"
  },
  "scripts": {
    "pretest": "npm run lint",
    "prepush": "npm run linclt",
    "test": "npm-run-all --parallel test:* ",
    "test:api": "NODE_ENV=test PROCESS_TYPE=api  mocha test/setup.js 'api/**/*.test.js'",
    "test:others": "NODE_ENV=test PROCESS_TYPE=api mocha test/setup.js  './{,!(node_modules|coverage|docs)/**/}*.test.js'",
    "watch": "npm-run-all --parallel watch:*",
    "watch:test": "onchange '**/*.js' '**/*.test.js'  -w -- npm run test",
    "watch:lint": "onchange '**/*.js' -w  -- npm run lint ",
    "cover": "npm-run-all cover:**",
    "cover:report": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "cover:report:open": "open coverage/lcov-report/index.html",
    "start": "npm-run-all --parallel start:*",
    "start:api": "node api/server.js",
    "lint": "standard --verbose  --fix | snazzy",
    "docs": "aglio -i docs/api.md -o apidocs/api.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kudobuzz/nodejs-api-starter.git"
  },
  "author": "william <obeng.kojo.william@gmail.com> (https://williamobeng.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kudobuzz/nodejs-api-starter/issues"
  },
  "homepage": "https://github.com/kudobuzz/nodejs-api-starter#readme",
  "dependencies": {
    "body-parser": "1.17.1",
    "bunyan": "1.8.9",
    "cors": "2.8.1",
    "express": "4.15.2",
    "global": "4.3.1",
    "husky": "0.13.3",
    "joi": "10.3.1",
    "mongoose": "4.9.2",
    "morgan": "1.8.1",
    "superagent": "3.5.1"
  },
  "devDependencies": {
    "aglio": "2.3.0",
    "chai": "3.5.0",
    "dotenv": "4.0.0",
    "mocha": "3.2.0",
    "npm-run-all": "4.0.2",
    "nyc": "10.2.0",
    "onchange": "3.2.1",
    "sinon": "2.1.0",
    "sinon-chai": "2.9.0",
    "snazzy": "6.0.0",
    "standard": "10.0.1",
    "supertest": "3.0.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
