{
  "name": "api-starter",
  "version": "1.0.0",
  "description": "kudo node.js template",
  "main": "service/api/client.js",
  "engines": {
    "node": ">=7.7.4"
  },
  "scripts": {
    "prepush": "npm run lint",
    "test": "#âš¡ Run test \n\t PROCESS_TYPE=api mocha test/setup.js  './{,!(node_modules|coverage|docs)/**/}*.test.js' --color --no-timeouts",
    "pretest": "npm run lint",
    "watch": "onchange \"**/*.js\" \"**/*.test.js\"  -w -- npm run test",
    "cover": "#Run coverage report \n\t npm-run-all cover:**",
    "cover:report": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "cover:report:open": "opn coverage/lcov-report/index.html",
    "postcover": "rimraf -rf .nyc_output",
    "start": "#Run start processes \n\t npm-run-all --parallel start:*",
    "start:api": "node api/server.js",
    "lint": "# Run lint and fix \n\t standard --verbose  --fix | snazzy",
    "docs": "aglio -i docs/api.md -o apidocs/api.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kudobuzz/nodejs-api-starter.git"
  },
  "author": "william <obeng.kojo.william@gmail.com> (https://williamobeng.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kudobuzz/nodejs-api-starter/issues"
  },
  "homepage": "https://github.com/kudobuzz/nodejs-api-starter#readme",
  "dependencies": {
    "@kudobuzz/express-bunyan-logger": "1.1.4",
    "@kudobuzz/express-joi-validator": "0.0.9",
    "@kudobuzz/mongodb-utils": "2.1.0",
    "@kudobuzz/resource-manager": "1.3.0",
    "body-parser": "1.17.1",
    "bunyan": "1.8.9",
    "cors": "2.8.1",
    "express": "4.15.2",
    "joi": "10.3.1",
    "mongoose": "5.2.7",
    "morgan": "1.8.1",
    "superagent": "3.5.1"
  },
  "devDependencies": {
    "aglio": "2.3.0",
    "chai": "3.5.0",
    "chai-as-promised": "7.1.1",
    "cross-env": "4.0.0",
    "dotenv": "4.0.0",
    "husky": "0.13.3",
    "mocha": "3.2.0",
    "nock": "9.5.0",
    "npm-run-all": "4.0.2",
    "nyc": "10.2.0",
    "onchange": "3.2.1",
    "opn-cli": "3.1.0",
    "rimraf": "2.6.1",
    "shelljs": "^0.7.7",
    "sinon": "2.1.0",
    "sinon-chai": "2.9.0",
    "snazzy": "6.0.0",
    "standard": "10.0.1",
    "supertest": "3.0.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
